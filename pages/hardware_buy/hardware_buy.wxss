/* group_tour.wxss */
.title_container{
  margin-top:50rpx;
  width: 100%;
  height: auto;
}
.title_left{
  width: 26rpx;
  height: 24rpx;
  margin-right: 32rpx;
}
.title_left image{
  width: 26rpx;
  height: 24rpx;
}
.title_right{
  margin-left: 32rpx;
  width: 26rpx;
  height: 24rpx;
}
.title_right image{
  width: 26rpx;
  height: 24rpx;
}
.title_text{
  font-size: 32rpx;
  line-height: 48rpx;
  color: #000000;
}
.route_list_container{
  height: auto;
  width: 100%;
  padding: 20rpx 20rpx 20rpx 20rpx;
}
.route_image{
  height: 174rpx;
  width: 174rpx;
}
.route_image image{
  border-radius: 10rpx;
  height: 174rpx;
  width: 174rpx;
}
.route_discription_container{
  position: relative;
  margin-left: 20rpx;
  width: 496rpx;
  height: auto;
}
.route_discription{
  font-size: 32rpx;
  line-height: 48rpx;
  color: #000000;
  width: 496rpx;
  height: auto;
  display: -webkit-box !important; 
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2;
}
.route_tag{ 
  width: 400rpx;
  height: auto;
}
.route_price{
  position: absolute;
  width: auto;
  height: auto;
  bottom:0rpx;
  right: 0rpx;

}
.tag_yellow{
  margin-top: 6prx;
  margin-left: 6rpx;
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  border-radius: 6rpx;
  padding: 0rpx 20rpx 0 20rpx;
  width:auto;
  font-size: 22rpx;
  line-height: 28rpx;
  color: #FFFFFF;
  background-color: rgb(235, 170, 69);
}
.tag_green{
  margin-top: 6prx;
  margin-left: 6rpx;
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  border-radius: 6rpx;
  padding: 0rpx 20rpx 0 20rpx;
  width:auto;
  font-size: 22rpx;
  line-height: 28rpx;
  color: rgb(92,201,162);
  border:1rpx solid rgb(92,201,162);
  
}
.price_symbol{
  font-size: 20rpx;
  line-height: 24rpx;
  color: #3FC8DE;
}
.price_unit{
  font-size: 20rpx;
  line-height: 24rpx;
  color: #3FC8DE;
}
.price{
  font-size: 32rpx;
  /* line-height: 32rpx; */
  color: #3FC8DE;
}
.route_interval{
  width: 100%;
  height: 4rpx;
  border: 2rpx solid #F1F1F1;
}
.interval{
  width: 100%;
  height: 30rpx;
}
.bottom{
  width: 100%;
  height: 80rpx;
}
