.top{
  width: 100%;
  height: 122rpx;
}
.player_container{
  width: 100%;
  height: auto;
  padding: 20rpx 40rpx 20rpx 40rpx;
}
.player_image{
  position: relative;
  width: auto;
  height: auto;
}
.player_image image{
  height: 446rpx;
  width: 670rpx;
}

.logo{
  position: absolute;
  bottom: 120rpx;
  right: 0rpx;
  width: auto;
  height: auto;
}
.logo image{
  width: 750rpx;
  height: 410rpx;
}

.person_name{
  z-index: 30;
  padding: 0rpx 15rpx 0rpx 15rpx;
  position: absolute;
  width: 334rpx;
  height: 58rpx;
  bottom: 149rpx;
  right: 27rpx;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #353535;
  background-color: #EAEAEA;
  border: 2rpx solid #D7D7D7;
}
.empty_person_name{
  font-size: 28rpx;
  line-height: 42rpx;
  color: #979797;
}
.ok_button{
  width: 186rpx;
  height: 60rpx;
  bottom: 46rpx;
  right: 12rpx;
